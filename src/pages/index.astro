.button {
  width:18px;
  height:18px;
  border-radius:50%;
  border:2px solid white;
  cursor:pointer;
  transition:transform .2s
}
.button:hover {
  transform:scale(1.1)
}
.content {
  padding:15px;
  font-size:14px;
  color:var(--text);
  max-height:400px;
  overflow-y:auto
}
.content img {
  max-width:100%;
  border-radius:10px;
  margin:10px 0
