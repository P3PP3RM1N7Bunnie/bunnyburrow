            background: rgba(128, 92, 98);
            border: 1px dashed #805c62;
        }

        .marquee {
            display: flex;
            animation: scroll 20s linear infinite;
        }

        @keyframes scroll {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .secret-menu {
            position: fixed;
            right: -300px;
            top: 50%;
            transform: translateY(-50%);
            width: 300px;
            background: rgba(128, 92, 98);
            border-left: 2px solid #ff00ff;
            padding: 20px;
            transition: right 0.3s;
            z-index: 1000;
        }

        .secret-menu.active {
            right: 0;
        }

        .secret-trigger {
            position: fixed;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 100px;
            background: #ff00ff;
            cursor: pointer;
