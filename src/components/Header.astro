---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://spacehey.com/andyoudontseemtounderstand" target="_blank">
				<span class="sr-only">SpaceHey</span>
				<img src="https://i.ibb.co/k23HtbBx/spacehey.png" alt="rainbow dash best day ever" width="120" height="60" border="0">



			</a>
			<a href="https://discordapp.com/users/1106436623677272074" target="_blank">
				<span class="sr-only">Discord</span>
				<img src="https://i.ibb.co/B2VzJ4fN/Untitled-video-Made-with-Clipchamp-5.gif" alt="spacehey" width="120" height="60" border="0">
			</a>



            <a href="https://github.com/P3PP3RM1N7Bunnie" target="_blank">
				<span class="sr-only">Bunnie's GitHub repo</span>
				<img src="https://i.ibb.co/chb1nLbB/main.png" alt="anime girl smoking" width="60" height="60" border="0">
			</a>
		</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #4e5b2c;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
